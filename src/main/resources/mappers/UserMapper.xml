<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "file:///${project.basedir}/src/main/resources/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisredis.mapper.UserMapper">
    
    <resultMap id="baseResultMap" type="com.example.mybatisredis.entity.User">
        <result property="password" column="PASSWORD"/>
        <result property="username" column="USERNAME"/>
        <result property="registerTime" column="REGISTER_TIME"/>
    </resultMap>

    <select id="queryAll" resultMap="baseResultMap">
        select * from DFH."USERS"
    </select>

    <select id="queryByUsername" resultMap="baseResultMap">
        select PASSWORD,USERNAME from DFH."USERS" where USERNAME=#{username}
    </select>


    <select id="save">
        insert into DFH.USERS (USERNAME,PASSWORD,REGISTER_TIME) values (#{username},#{password},
        #{registerTime})
    </select>

</mapper>